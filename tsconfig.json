{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Vite React",
	"_version": "3.0.0",

	"compilerOptions": {
		"declaration": true,
		"emitDeclarationOnly": false,
		"outDir": "./dist",
		"declarationMap": true,
		"declarationDir": "./types",
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext", // Change to ESNext for modern JS
		"moduleResolution": "node", // Change to 'node' for front-end or 'classic' if needed
		"skipLibCheck": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	}
}
